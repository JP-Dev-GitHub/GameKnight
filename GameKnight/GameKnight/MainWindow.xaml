<Window x:Class="GameKnight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameKnight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Buttons arranged vertically inside a StackPanel. -->
        <StackPanel HorizontalAlignment="Left" Margin="298,126,0,53.667" Width="212">
            <Button> Add New Game </Button>
            <Button>Add New Participant</Button>
            <Button Margin="298,126,0,53.667" Click="Button_Click"> Let's Play! </Button>
        </StackPanel>
        <StackPanel Margin="628,10,10.333,189.667">
            <Label FontWeight="Bold">Application Options</Label>
            <CheckBox IsChecked="False">Ballot</CheckBox>
        </StackPanel>
    </Grid>
</Window>
