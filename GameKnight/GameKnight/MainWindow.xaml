<Window x:Class="GameKnight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameKnight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Thickness x:Key="tbMargin">0,20,0,0</Thickness>
    </Window.Resources>
    <Grid>
        <!-- Buttons arranged vertically inside a StackPanel. -->
        <StackPanel HorizontalAlignment="Left" Margin="293,56,0,208" Width="212">
            <Button Click="AddNewGame">Add New Game</Button>
            <Button Click="AddNewUser">Add New Participant</Button>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="{StaticResource tbMargin}"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
        <StackPanel Margin="628,10,10.333,189.667">
            <Label FontWeight="Bold">Application Options</Label>
            <CheckBox Name="IncludeEveryone_chbx" ToolTip="Check this box if you want to ensure everyone owns the games that are put on the ballot." 
                      Margin="0,5,0,0" IsChecked="False" Checked="IncludeEveryone_Checked">Include Everyone</CheckBox>
            <CheckBox Name="UseBallot_chbx" ToolTip="Check this box if you want more than 1 game to be selected and voted on."
                      Margin="0,15,0,0" IsChecked="False" Checked="UseBallot_chbx_Checked">Ballot</CheckBox>
            <ComboBox Name="BallotNum_cmbx" Margin="0,8,0,0" SelectionChanged="BallotNumber_SelectionChanged">
                <ComboBoxItem IsSelected="True">Total Games</ComboBoxItem>
                <ComboBoxItem IsSelected="False">2</ComboBoxItem>
                <ComboBoxItem IsSelected="False">3</ComboBoxItem>
                <ComboBoxItem IsSelected="False">4</ComboBoxItem>
                <ComboBoxItem IsSelected="False">5</ComboBoxItem>
                <ComboBoxItem IsSelected="False">6</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Button Click="LetsPlay" Margin="327,328,327,35" Content="Let's Play!"/>
        <Popup Name="MyPopup"
               Placement="Mouse"
               HorizontalOffset="-100"
               VerticalOffset="-100"
               AllowsTransparency="True"/>
    </Grid>
</Window>
